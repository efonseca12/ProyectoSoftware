@page
@model Proyecto_Software.Pages.Clientes.IndexModel

<h2>Lista de Clientes</h2>
<p>
    <a asp-page="Create">Crear Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clientes)
        {
            <tr>
                <td>@item.PrimerNombre @item.PrimerApellido</td>
                <td>@item.Correo</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ID">Editar</a> |
                    <a asp-page="Details" asp-route-id="@item.ID">Detalles</a> |
                    <a asp-page="Delete" asp-route-id="@item.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
